#include<iostream>
#include<stdio.h>
#include<cmath>
#include <iomanip>
using namespace std;
int main(){
#ifdef _DEBUG
  freopen("data","r",stdin);
#endif
  int T;
  cin>>T;
  while(T--){
    double x;
    scanf("%lf",&x);
    printf("%0.5f\n",erf(x)/2.0/sqrt(2)+0.5);
		
  }
#ifdef _DEBUG
  freopen("CON","r",stdin);
  system("pause");
#endif
  return 0;
}



