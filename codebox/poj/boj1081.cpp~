#include<iostream>
using namespace std;
int num[1000000];
int getkth(int l,int r,int k){
  int ll=l,rr=r,z=num[l];
  while(ll<rr){
    while(z<num[rr])
      rr--;
    if(ll<rr)
      swap(num[ll],num[rr]);
    while(num[ll]<z)
      ll++;
    if(ll<rr)
      swap(num[ll],num[rr]);
  }
  if(ll==k-1)
    return(num[ll]);
  else if(ll>k-1){
    return getkth(l,ll,k);
  }
  else if(ll<k-1){
    return getkth(ll,r,k-ll-1);
  }
}
int main(){
#ifdef _DEBUG
  freopen("data","r",stdin);
#endif
  int n,k;
  while(cin>>n){
    cin>>k;
    for(int i=0;i<n;i++){
      cin>>num[i];
    }
    cout<<getkth(0,n-1,k)<<endl;
  }
#ifdef _DEBUG
  freopen("CON","r",stdin);
  system("pause");
#endif
  return 1;

}
